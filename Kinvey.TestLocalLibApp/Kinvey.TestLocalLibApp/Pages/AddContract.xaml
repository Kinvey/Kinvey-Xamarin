<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Kinvey.TestLocalLibApp.Pages;assembly=Kinvey.TestLocalLibApp"
             x:Class="Kinvey.TestLocalLibApp.Pages.AddContract">
    <pages:BasePage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection  Title="Add contract">
                        <EntryCell x:Name="TitleEntryCell"  Label="Title:" ></EntryCell>
                        <EntryCell x:Name="NumberEntryCell" Label="Number:"></EntryCell>
                    </TableSection>
                </TableRoot>
            </TableView>
            <StackLayout>
                <StackLayout HorizontalOptions="Center" Orientation="Horizontal">
                    <Button Text="Save" Clicked="SaveButton_OnClicked"/>
                    <Button Text="Cancel" Clicked="CancelButton_OnClicked" />
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </pages:BasePage.Content>
</pages:BasePage>